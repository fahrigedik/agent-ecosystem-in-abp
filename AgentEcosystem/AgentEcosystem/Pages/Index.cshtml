@page
@using Microsoft.AspNetCore.Mvc.Localization
@using AgentEcosystem.Localization
@using Volo.Abp.Users
@inject IHtmlLocalizer<AgentEcosystemResource> L
@model AgentEcosystem.Pages.IndexModel
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.cshtml.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.cshtml.js" />
}

<!-- ═══════════════════════════════════════════════════════════ -->
<!-- AI Agent Ecosystem — Çoklu Ajan Araştırma Asistanı         -->
<!-- A2A + MCP + ADK + Semantic Kernel                         -->
<!-- ═══════════════════════════════════════════════════════════ -->

<!-- Başlık + Mimari Kartları -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card agent-hero-card">
            <div class="card-body py-4">
                <div class="d-flex align-items-center justify-content-between flex-wrap">
                    <div>
                        <h2 class="mb-1"><i class="fas fa-robot me-2 text-primary"></i>AI Agent Ecosystem</h2>
                        <p class="text-muted mb-0">Çoklu Ajan Araştırma Asistanı — A2A + MCP + ADK + Semantic Kernel</p>
                    </div>
                    <div class="d-flex gap-2 mt-2 mt-md-0">
                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2"><i class="fas fa-brain me-1"></i>Semantic Kernel</span>
                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-2"><i class="fas fa-exchange-alt me-1"></i>A2A</span>
                        <span class="badge bg-info bg-opacity-10 text-info px-3 py-2"><i class="fas fa-tools me-1"></i>MCP</span>
                        <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-2"><i class="fas fa-project-diagram me-1"></i>ADK</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mimari Kartları -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100 arch-card border-start border-primary border-3">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <div class="arch-icon bg-primary bg-opacity-10 text-primary"><i class="fas fa-search"></i></div>
                    <h6 class="mb-0 ms-2">Araştırmacı Ajan</h6>
                </div>
                <p class="text-muted small mb-0">Web'de arama yapıp GPT ile araştırma raporu oluşturur. MCP WebSearch aracını kullanır.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100 arch-card border-start border-success border-3">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <div class="arch-icon bg-success bg-opacity-10 text-success"><i class="fas fa-chart-bar"></i></div>
                    <h6 class="mb-0 ms-2">Analiz Ajanı</h6>
                </div>
                <p class="text-muted small mb-0">Araştırma verilerini analiz eder, raporlar. MCP ile dosya ve veritabanına kaydeder.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100 arch-card border-start border-info border-3">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <div class="arch-icon bg-info bg-opacity-10 text-info"><i class="fas fa-cogs"></i></div>
                    <h6 class="mb-0 ms-2">MCP Araçları</h6>
                </div>
                <p class="text-muted small mb-0">WebSearch, FileSystem, Database — LLM'lerin dış dünyaya erişim noktaları.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card h-100 arch-card border-start border-warning border-3">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <div class="arch-icon bg-warning bg-opacity-10 text-warning"><i class="fas fa-network-wired"></i></div>
                    <h6 class="mb-0 ms-2">Orkestratör</h6>
                </div>
                <p class="text-muted small mb-0">ADK SequentialAgent ve A2A protokolü ile ajanları koordine eder.</p>
            </div>
        </div>
    </div>
</div>

<!-- Araştırma Formu -->
<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="card-title mb-0"><i class="fas fa-flask me-2"></i>Yeni Araştırma Başlat</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Araştırma Sorgusu</label>
                    <textarea id="researchQuery" class="form-control" rows="3"
                              placeholder="Örn: .NET 10'daki yeni özellikler nelerdir? Semantic Kernel ile AI ajan geliştirme..."></textarea>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Çalışma Modu</label>
                        <div class="d-flex gap-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="researchMode" id="modeSequential" value="sequential" checked>
                                <label class="form-check-label" for="modeSequential">
                                    <i class="fas fa-stream me-1 text-primary"></i> ADK Sequential
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="researchMode" id="modeA2A" value="a2a">
                                <label class="form-check-label" for="modeA2A">
                                    <i class="fas fa-exchange-alt me-1 text-success"></i> A2A Protocol
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <button id="btnStartResearch" class="btn btn-primary btn-lg">
                    <i class="fas fa-rocket me-2"></i>Araştırmayı Başlat
                </button>
            </div>
        </div>
    </div>

    <!-- Pipeline Durumu -->
    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="fas fa-tasks me-2"></i>Pipeline Durumu</h5>
            </div>
            <div class="card-body" id="pipelineStatus">
                <div class="pipeline-step" id="stepIdle">
                    <div class="d-flex align-items-center">
                        <div class="step-indicator idle"><i class="fas fa-circle"></i></div>
                        <span class="ms-2 text-muted">Bekleniyor...</span>
                    </div>
                    <small class="text-muted ms-4">Araştırma başlatmak için sorgu girin</small>
                </div>
                <div class="pipeline-step d-none" id="stepSearch">
                    <div class="d-flex align-items-center">
                        <div class="step-indicator"><i class="fas fa-spinner fa-spin"></i></div>
                        <span class="ms-2">MCP: Web Arama</span>
                    </div>
                </div>
                <div class="pipeline-step d-none" id="stepResearch">
                    <div class="d-flex align-items-center">
                        <div class="step-indicator"><i class="fas fa-spinner fa-spin"></i></div>
                        <span class="ms-2">Araştırmacı Ajan</span>
                    </div>
                </div>
                <div class="pipeline-step d-none" id="stepAnalysis">
                    <div class="d-flex align-items-center">
                        <div class="step-indicator"><i class="fas fa-spinner fa-spin"></i></div>
                        <span class="ms-2">Analiz Ajanı</span>
                    </div>
                </div>
                <div class="pipeline-step d-none" id="stepSave">
                    <div class="d-flex align-items-center">
                        <div class="step-indicator"><i class="fas fa-spinner fa-spin"></i></div>
                        <span class="ms-2">MCP: Kaydet</span>
                    </div>
                </div>
                <div class="pipeline-step d-none" id="stepComplete">
                    <div class="d-flex align-items-center">
                        <div class="step-indicator success"><i class="fas fa-check-circle"></i></div>
                        <span class="ms-2 text-success fw-semibold">Tamamlandı</span>
                    </div>
                    <small class="text-muted ms-4" id="stepCompleteTime"></small>
                </div>
                <div class="pipeline-step d-none" id="stepError">
                    <div class="d-flex align-items-center">
                        <div class="step-indicator error"><i class="fas fa-times-circle"></i></div>
                        <span class="ms-2 text-danger fw-semibold">Hata</span>
                    </div>
                    <small class="text-danger ms-4" id="stepErrorMsg"></small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sonuçlar -->
<div class="row mb-4 d-none" id="resultsSection">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="card-title mb-0"><i class="fas fa-file-alt me-2"></i>Araştırma Sonucu</h5>
                <div class="d-flex gap-2">
                    <span class="badge bg-light text-dark" id="resultModeLabel"></span>
                    <span class="badge bg-light text-dark" id="resultTimeLabel"></span>
                </div>
            </div>
            <div class="card-body">
                <!-- Sonuç Tab'ları -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tabAnalysis" type="button">
                            <i class="fas fa-chart-pie me-1"></i>Analiz Raporu
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tabResearch" type="button">
                            <i class="fas fa-search me-1"></i>Araştırma Raporu
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tabRaw" type="button">
                            <i class="fas fa-code me-1"></i>Ham Veri
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tabEvents" type="button">
                            <i class="fas fa-list-ul me-1"></i>Ajan Olayları
                        </button>
                    </li>
                </ul>
                <div class="tab-content mt-3">
                    <div class="tab-pane fade show active" id="tabAnalysis">
                        <div id="analysisContent" class="result-content"></div>
                    </div>
                    <div class="tab-pane fade" id="tabResearch">
                        <div id="researchContent" class="result-content"></div>
                    </div>
                    <div class="tab-pane fade" id="tabRaw">
                        <pre id="rawContent" class="result-content bg-light p-3 rounded"></pre>
                    </div>
                    <div class="tab-pane fade" id="tabEvents">
                        <div id="eventsContent"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Geçmiş Araştırmalar -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="card-title mb-0"><i class="fas fa-history me-2"></i>Geçmiş Araştırmalar</h5>
                <button id="btnRefreshHistory" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-sync-alt me-1"></i>Yenile
                </button>
            </div>
            <div class="card-body">
                <div id="historyLoading" class="text-center py-3 d-none">
                    <i class="fas fa-spinner fa-spin fa-2x text-muted"></i>
                </div>
                <div id="historyEmpty" class="text-center py-4">
                    <i class="fas fa-inbox fa-3x text-muted mb-3 d-block"></i>
                    <p class="text-muted">Henüz araştırma yapılmamış. Yukarıdan ilk araştırmanızı başlatın!</p>
                </div>
                <div class="table-responsive d-none" id="historyTable">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Sorgu</th>
                                <th>Durum</th>
                                <th>Süre</th>
                                <th>Tarih</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="historyBody"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>